                <RadioButton Content="Listado Excluidos" Click="RadioButton_Click_3"  ToolTip="Listado de beneficiarios excluidos." HorizontalAlignment="Left" Margin="20,78,0,0" VerticalAlignment="Top" GroupName="Rep"/>
                <RadioButton Content="Busqueda de Beneficiario"  Click="RadioButton_Click_4" ToolTip="Busqueda de beneficiario por nombre, apellidos o cedula." HorizontalAlignment="Left" Margin="20,98,0,0" VerticalAlignment="Top" GroupName="Rep"/>

            </Grid>
        </GroupBox>

    </Grid>
