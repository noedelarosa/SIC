        <Button Content="Aceptar" x:Name="But_Aceptar" HorizontalAlignment="Left" Margin="13,259,0,0" VerticalAlignment="Top" Width="75" Click="But_Aceptar_Click"/>
        <Button Content="Salir" x:Name="But_Salir" HorizontalAlignment="Left" Margin="93,259,0,0" VerticalAlignment="Top" Width="75" Click="But_Salir_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,25,0,0" TextWrapping="Wrap" Text="Que Deseo Seleccionar?" VerticalAlignment="Top" Width="220" Height="19" FontSize="14" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="8,16,0,0" VerticalAlignment="Top" Width="45" Source="/SIC;component/Objs/Comun/imgs/help_48.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="58,49,0,0" TextWrapping="Wrap" Text="Puede seleccionar Limite Edad(18/21) o Limite de Exclución." VerticalAlignment="Top" Width="220" Height="40"/>
