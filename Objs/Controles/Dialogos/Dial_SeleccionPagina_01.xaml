<Window x:Class="SIC.Objs.Controles.Dialogos.Dial_SeleccionPagina_01"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Closed="Window_Closed"
        Title="Que Deseo Seleccionar?" Height="347.343" Width="296" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
