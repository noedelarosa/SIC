<Window x:Class="SIC.Objs.Controles.EditText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles" Height="299" Width="395" WindowStartupLocation="CenterScreen"  WindowStyle="SingleBorderWindow" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="Txt_Detalle" Margin="10,29,10,40" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible"/>
        <Button Content="Aceptar" x:Name="But_Aceptar" Margin="10,0,0,5" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="90"/>
        <Button Content="Salir" x:Name="But_Salir" Margin="105,0,0,5" Click="But_Salir_Click" Height="24" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="90"/>
        <TextBlock x:Name="Txt_CabezaDetalle" Margin="10,8,10,0" TextWrapping="Wrap" Text="Detalle(s)" VerticalAlignment="Top"/>

    </Grid>
</Window>
